<!DOCTYPE html>
<html lang="es">

<%- include('partials/head', {
    title : 'MOVIE ADD'
   }) %>

<body>
    <%- include('partials/header') %>

    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <form action="/movies/create" method="POST">
            <label for="title">Title </label>
            <p><input type="text" name="title" id="" required></p>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" required> </p>
            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="" required></p>
            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="" required></p>
            <label for="length">Length </label>
            <p><input type="number" name="length" id="" required></p>
            <label for="genreID">Genre </label>
            <p>
                <select name="genre_id" id="" required>
                    <option value="" disabled selected>- select genre - </option>
                    <% allGenres.forEach(genre => { %>
                    <option value="<%= genre.id %>"><%= genre.name %></option>
                    <% }); %>
                </select>
            </p>
            <div class="mb-3 col-12 col-md-3">
                <div>
                    <label for="formFile" class="form-label">Agregar imagen</label>
                    <input class="form-control" type="file" id="formFile" name="image">
                  </div>
            </div>
            <div class="mb-3 col-12">
                <div class="row">
                <% actors.forEach(actor => { %>
                        <div class="col-12 col-md-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="actor<%= actor.id %>">
                                <label class="form-check-label" for="actor<%= actor.id %>">
                                  <%= actor.first_name %> <%= actor.last_name %>
                                </label>
                              </div>
                        </div>
                        
                        <% }) %>
                    </div>
            </div>
            <div class="mb-3 col-12 d-flex align-items-end">
                <button class="btn btn-outline-dark w-100" type="submit">Guardar</button>
            </div>
            <div class="mb-3 col-12 d-flex align-items-end">
                <a class="btn btn-outline-dark w-100" href="/movies">Listado de Películas</a></button>
            </div>
        </form>
    </section>
    
</body>

</html>